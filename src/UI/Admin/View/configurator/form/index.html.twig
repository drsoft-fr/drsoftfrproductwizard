{% extends '@Modules/drsoftfrproductwizard/src/UI/Admin/View/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {% if manifest is defined %}
        <link href="{{ asset('../modules/drsoftfrproductwizard/views/' ~ manifest.url('src/js/admin/configurator/form/index.js', 'admin-configurator-form')['css'][0]) }}"
              rel="stylesheet">
    {% endif %}
{% endblock %}

{% block main %}
    <div id="app-configurator-admin"
         data-configurator-id="{{ configurator_id|default('null') }}">
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden invisible">{{ 'Loading...'|trans }}</span>
            </div>
            <p class="mt-3">{{ 'Loading the administration interface...'|trans }}</p>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% if manifest is defined %}
        <script type="module"
                src="{{ asset('../modules/drsoftfrproductwizard/views/' ~ manifest.url('src/js/admin/configurator/form/index.js', 'admin-configurator-form')['file']) }}"
                async defer></script>
    {% endif %}
{% endblock %}