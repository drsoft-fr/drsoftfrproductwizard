{% extends '@Modules/drsoftfrproductwizard/src/UI/Admin/View/base.html.twig' %}

{% block main %}
    <div class="row justify-content-center">
        <div class="col">
            <nav class="card navbar navbar-expand">
                <ul class="navbar-nav">
                    <li>
                        <a href="{{ path('admin_drsoft_fr_product_wizard_configurator_index') }}" class="nav-link">
                            {{ 'Home'|trans }}
                        </a>
                    </li>

                    <li>
                        <span class="nav-link active">{{ 'Import'|trans({}, 'Modules.Drsoftfrproductwizard.Admin') }}</span>
                    </li>
                </ul>
            </nav>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-header-title">{{ 'Import a configurator'|trans({}, 'Modules.Drsoftfrproductwizard.Admin') }}</h3>
                </div>

                <div class="card-body">
                    <form method="post" enctype="multipart/form-data"
                          action="{{ path('admin_drsoft_fr_product_wizard_configurator_import_handle') }}">
                        <div class="form-group">
                            <label for="import_file">{{ 'JSON file'|trans({}, 'Modules.Drsoftfrproductwizard.Admin') }}</label>

                            <input type="file" name="import_file" id="import_file" class="form-control"
                                   accept="application/json" required>
                            <small class="form-text text-muted">{{ 'Select a JSON file exported from another site.'|trans({}, 'Modules.Drsoftfrproductwizard.Admin') }}</small>
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="material-icons">file_upload</i> {{ 'Import'|trans({}, 'Modules.Drsoftfrproductwizard.Admin') }}
                            </button>

                            <a href="{{ return_url ?? path('admin_drsoft_fr_product_wizard_configurator_index') }}"
                               class="btn btn-outline-secondary">
                                {{ 'Cancel'|trans({}, 'Admin.Actions') }}
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
