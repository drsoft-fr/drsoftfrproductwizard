<div x-data="productChoiceManager({{ form|length }}, '{{ step_idx }}')" class="mb-2">
    <h5 class="mb-2">Choix produits</h5>
    <div id="product-choices-collection-{{ step_idx }}">
        {% for choiceForm in form %}
            {% include '@Modules/drsoftfrproductwizard/views/templates/admin/configurator/_product_choice_form.html.twig' with { 'form': choiceForm, 'choice_idx': loop.index0, 'step_idx': step_idx } %}
        {% endfor %}
    </div>
    <template id="product-choice-prototype-{{ step_idx }}">
        {% include '@Modules/drsoftfrproductwizard/views/templates/admin/configurator/_product_choice_form.html.twig' with { 'form': form.vars.prototype, 'choice_idx': '__choice__', 'step_idx': step_idx } %}
    </template>
    <button type="button" class="btn btn-outline-secondary btn-sm mt-1" @click="addProductChoice">
        <i class="material-icons">add</i> Ajouter un choix produit
    </button>
</div>
